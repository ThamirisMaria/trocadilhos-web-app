@model TrocadilhosWebApp.Models.Trocadilho

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esse trocadilho?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            Pergunta do Trocadilho
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.TrocadilhoQuestion)
        </dd>
        <dt class = "col-sm-4">
            Resposta do Trocadilho
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.TrocadilhoAnswer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <button asp-action="Index" class="btn btn-light">Voltar</button>
    </form>
</div>
