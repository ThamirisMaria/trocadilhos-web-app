@model TrocadilhosWebApp.Models.Trocadilho

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Trocadilho</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrocadilhoQuestion" class="control-label">Pergunta do Trocadilho</label>
                <input asp-for="TrocadilhoQuestion" class="form-control" />
                <span asp-validation-for="TrocadilhoQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrocadilhoAnswer" class="control-label">Resposta do Trocadilho</label>
                <input asp-for="TrocadilhoAnswer" class="form-control" />
                <span asp-validation-for="TrocadilhoAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-light">Voltar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
